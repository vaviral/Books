
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <table>
            <tr>
                <th>
                    Username:
                </th>
                <td>
                    <input id="UserName" type="text" />
                </td>
            </tr>
            <tr>
                <th>
                    Password:
                </th>
                <td>
                    <input id="Password" type="password" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <button onclick="Login()">Login</button>
                </td>
            </tr>
        </table>
    </div>
    <div class="row">
        @Html.Partial("_ExternalLogin")
    </div>
</div>
